# Multi-Tool Agent Configuration
# ==============================

# Azure OpenAI Configuration (Required for LLM capabilities)
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Agent Configuration
MAX_TOOL_CHAIN_LENGTH=5
EXECUTION_TIMEOUT=120

# MCP Server Configuration  
MCP_HOST=localhost
MCP_PORT=8001

# Logging Configuration
LOG_LEVEL=INFO

# External API Configuration (if connecting to real services)
# RAMCO_BASE_URL=https://your-ramco-instance.com/api
# RAMCO_AUTH_TOKEN=your-auth-token

# Optional: Dashboard and Monitoring
ENABLE_DASHBOARD_LOGGING=false
DASHBOARD_DATA_DIR=./data